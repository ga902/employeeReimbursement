<h1>Genrate Bill</h1>

<%= form_with model: @bill  do |form|%>
    <div>
        <%= form.label :amount%>
        <%= form.text_field :amount%>
    </div>
    <div>
        <%= form.label :type %>
        <%= form.text_field :type %>
    </div>
    <div>
        <%= form.label :employee_id %>
        <%= form.collection_select :employee_id, Employee.all ,:id , :first_name %>
    </div>
    <div>
        <%= form.submit %>
    </div>
<% end%>
    