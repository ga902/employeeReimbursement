<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Bill Details:</h1>
    </div>
  </div>
    <%= link_to 'Create new Bill', new_bill_path , class: 'btn btn-success'  %>
    <table class="table table-striped table-bordered mt-5" >
    <thead>
        <th>type</th>
        <th>Amount</th>
        <th>Date of Submition</th>
        <th>Submitted By </th>
        <th>Departmet</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        <% @bills.each do |bill|%>
            <tr>
                <td><%= bill.type %></td>
                <td><%= bill.amount %></td>
                <td><%= bill.created_at.strftime("%d %b %Y") %></td>
                <td><%= bill.employee.first_name %></td>
                <td><%= bill.employee.department.name %></td>
                <td><%= link_to 'Edit', edit_bill_path(bill), class:'btn btn-primary'	%>
                <td><%= link_to 'Delete',bill_path(bill), data:{turbo_method: :delete,
                turbo_confirm: "Are you sure?"} ,class:'btn btn-danger'%>
            </tr>
            <% end %>
    </tbody>
    </table>