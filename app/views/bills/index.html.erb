<h2>Show ALl Bills</h2>
    <%= link_to 'Create new Bill', new_bill_path %>
    <table>
    <thead>
        <th>type</th>
        <th>Amount</th>
        <th>Date of Submition</th>
        <th>Submitted By </th>
        <th>Departmet</th>
        <th></th>
        <th></th>
    </thead>
    <tbody>
        <% @bills.each do |bill|%>
            <tr>
                <td><%= bill.type %></td>
                <td><%= bill.amount %></td>
                <td><%= bill.created_at %></td>
                <td><%= bill.employee.first_name %></td>
                <td><%= bill.employee.department.name %></td>
                <td><%= link_to 'Edit', edit_bill_path(bill)	%>
                <td><%= link_to 'Delete',bill_path(bill), data:{turbo_method: :delete,
                turbo_confirm: "Are you sure?"} %>
            </tr>
            <% end %>
    </tbody>
    </table>